<?xml version="1.0" encoding="utf-8"?>
	<!-- 
	plot=TRUE -> enters the plot tag in the specified file.
	plot=FALSE -> plots nothing.
	-->
<jpad_config>
    <!-- Input data, shared across analysis tasks -->
	<!-- TODO: CHECK WHICH OF THESE IS NECESSARY -->
    <global_data>
        <positive_limit_load_factor>2.5</positive_limit_load_factor>
		<negative_limit_load_factor>-1.0</negative_limit_load_factor>
    </global_data>
    <!-- Required analysis tasks - comment the tag of the analysis if not needed -->
    <analyses id="IRON analysis">
        <weights 
            file="analysis_weights_IRON.xml" 
			plot="TRUE"
            method_fuselage=""
            method_wing=""
            method_htail=""
            method_vtail=""
			method_nacelles=""
			method_landing_gears=""
			method_systems=""
            />
		<!-- method_XXX="AVERAGED" if empty string -->
    <balance 
			file="analysis_balance_IRON.xml"
			plot="TRUE"
            method_fuselage=""
            method_wing=""
            method_htail=""
            method_vtail=""
			method_canard=""
		/>
	<!--
	<aerodynamic_and_stability
			plot="TRUE"
			take_off_condition="TRUE"
			file_take_off_condition="analysis_aerodynamics_Prototype.xml"
			climb_condition="TRUE"
			file_climb_condition="analysis_aerodynamics_Prototype.xml"
			cruise_condition="FALSE"
			file_cruise_condition="analysis_aerodynamics_Prototype.xml"
			landing_condition="FALSE"
			file_landing_condition="analysis_aerodynamics_Prototype.xml"
	/>
	-->
	<performance 
			file="analysis_performance_IRON.xml"
			plot="TRUE"
			take_off="FALSE"
			climb="FALSE"
			cruise="FALSE"
			descent="FALSE"
			landing="FALSE"
			payload_range="FALSE"
			V_n_diagram="FALSE"
			mission_profile="TRUE"
	/>
	<costs 
			file="analysis_costs_IRON.xml"
			plot="TRUE"
			doc_capital="TRUE"
			doc_capital_method="AEA"
			doc_crew="TRUE"
			doc_crew_method="AEA"
			doc_fuel="TRUE"
			doc_fuel_method="AEA"
			doc_charges="TRUE"
			doc_charges_method="ILR_AACHEN"
			doc_maintenance="TRUE"
			doc_maintenance_method="ATA"
	/>
	<!-- add other costs analyses if available -->
    </analyses>
</jpad_config>
