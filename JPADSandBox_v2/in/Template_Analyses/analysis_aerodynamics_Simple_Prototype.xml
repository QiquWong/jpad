<?xml version="1.0" encoding="utf-8"?>
<jpad_config>
	<!-- 
		plot=FALSE -> enters the plot tag.
		plot=FALSE -> plot nothing.
		
		- All the variables which have "METHOD" as attirubte, can be calculated with the deifned method 
		- IF THE MOMENTIUM POLE IS NOT ASSIGNED (wing/HTail/VTail), IT WILL BE ASSUMED AS THE Xac CALCUALTED USING THE METHOD "DEYOUNG_HARPER"
	-->
    <analysis>
        <aerodynamics_and_stability 
			id="IRON - AERODYNAMICS CRUISE"
			balance_from_previous_analysis="false"
			>
			<balance>
			<!-- 
			These values will be read only if the "balance_from_xls_file" is FALSE. 
			Otherwise the all the CG positions in every condition will be read from the Balance output file.
			-->
				<!-- the values of the centre of gravity position are referred to the mean aerodynamic chord of the wing -->
				<adimensional_center_of_gravity_x_position_list>0.1;0.4</adimensional_center_of_gravity_x_position_list>
				<adimensional_center_of_gravity_z_position_list>-0.03;-0.03</adimensional_center_of_gravity_z_position_list> <!-- in BRF referred to MAC --> 
				<fuselage_dimensional_center_of_gravity_x_position unit="m">18.639</fuselage_dimensional_center_of_gravity_x_position> <!-- in BRF --> 
				<fuselage_dimensional_center_of_gravity_z_position unit="m">0.0</fuselage_dimensional_center_of_gravity_z_position> <!-- in BRF --> 
				<rear_landing_gear_dimensional_center_of_gravity_x_position unit="m">22.26</rear_landing_gear_dimensional_center_of_gravity_x_position> <!-- in BRF --> 
				<rear_landing_gear_dimensional_center_of_gravity_z_position unit="m">-3.067</rear_landing_gear_dimensional_center_of_gravity_z_position> <!-- in BRF --> 
				<nacelle_dimensional_center_of_gravity_x_position unit="m">32.08</nacelle_dimensional_center_of_gravity_x_position> <!-- in BRF --> 
				<nacelle_dimensional_center_of_gravity_z_position unit="m">0.272</nacelle_dimensional_center_of_gravity_z_position> <!-- in BRF --> 
			</balance>
			<global_data>
				<alpha_body_initial unit="deg">-4</alpha_body_initial>
				<alpha_body_final unit="deg">10</alpha_body_final>
				<number_of_alpha_body>30</number_of_alpha_body>
				<beta_initial unit="deg">0</beta_initial>
				<beta_final unit="deg">30</beta_final>
				<number_of_beta>20</number_of_beta>
				<alpha_wing_array_for_distributions unit="deg">0.0;2.0;10.0</alpha_wing_array_for_distributions> <!-- these distributions are only in CLEAN configuration -->
				<alpha_horizontal_tail_array_for_distributions unit="deg">0.0;2.0;10.0</alpha_horizontal_tail_array_for_distributions>
				<beta_vertical_tail_array_for_distributions unit="deg">0.0;2.0;10.0</beta_vertical_tail_array_for_distributions>
				<alpha_canard_array_for_distributions unit="deg">0.0;2.0;10.0</alpha_canard_array_for_distributions>
				<number_of_points_semispawise_wing>50</number_of_points_semispawise_wing>
				<number_of_points_semispawise_horizontal_tail>50</number_of_points_semispawise_horizontal_tail>
				<number_of_points_semispawise_vertical_tail>50</number_of_points_semispawise_vertical_tail>
				<number_of_points_semispawise_canard>50</number_of_points_semispawise_canard>
				<delta_elevator_array unit="deg">5.0;0.0;-5.0;-10.0;-15.0;-20.0;-25.0;-30.0</delta_elevator_array>
				<delta_rudder_array unit="deg">5.0;10.0;15.0;20.0;25.0</delta_rudder_array>
				<delta_canard_control_surface_array unit="deg">5.0;0.0;-5.0;-10.0;-15.0;-20.0;-25.0</delta_canard_control_surface_array>
				<adimensional_wing_momentum_pole>0.25</adimensional_wing_momentum_pole> 
				<adimensional_horizontal_tail_momentum_pole>0.25</adimensional_horizontal_tail_momentum_pole> 
				<adimensional_vertical_tail_momentum_pole>0.25</adimensional_vertical_tail_momentum_pole> 
				<adimensional_canard_momentum_pole>0.25</adimensional_canard_momentum_pole> 
				<adimensional_fuselage_momentum_pole>0.5</adimensional_fuselage_momentum_pole> <!-- adimensional: referred to fuselage length -->
				<!-- the following values can be left blanck. In this case the related quantities will be automatically calculated --> 
				<wing_dynamic_pressure_ratio>1.0</wing_dynamic_pressure_ratio>
				<horizontal_tail_dynamic_pressure_ratio>0.8</horizontal_tail_dynamic_pressure_ratio>
				<vertical_tail_dynamic_pressure_ratio>0.9</vertical_tail_dynamic_pressure_ratio>
				<tau_elevator_function>
					<tau>0.4221</tau>
					<delta_elevator unit="deg"></delta_elevator> <!-- if the tau array contains only 1 value this tag can be left empty -->
				</tau_elevator_function>
				<tau_rudder_function>
					<tau>0.0000;0.5359;0.5648;0.5502;0.5261</tau>
					<delta_rudder unit="deg">0.0;10.0;20.0;25.0;30.0</delta_rudder> <!-- if the tau array contains only 1 value this tag can be left empty -->
				</tau_rudder_function>	
				<tau_canard_control_surface_function>
					<tau>0.4</tau>
					<delta_canard_control_surface unit="deg"></delta_canard_control_surface> <!-- if the tau array contains only 1 value this tag can be left empty -->
				</tau_canard_control_surface_function>
				<!---->
			</global_data>
			<!-- POSSIBLE ANALYSIS TYPE = "SEMIEMPIRICAL", "NASA_BLACKWELL", "AVL", ecc.. -->
			<components>
				<wing perform="FALSE" type=""/>
				<horizontal_tail perform="TRUE" type=""/>
				<vertical_tail_analyses perform="TRUE" type=""/>
				<canard_analyses perform="TRUE" type=""/>
				<fuselage_analyses perform="TRUE" type=""/>
				<nacelle_analyses perform="TRUE" type=""/>
			</components>
			<aircraft>
				<canard_downwash constant_downwash_gradient="FALSE" method=""/>
				<wing_downwash constant_downwash_gradient="FALSE" method="SLINGERLAND"/> <!-- ROSKAM NON LINEAR GIVES PROBLEM: DISABLED TEMPORARY --> 
				<total_lift_curve perform="TRUE" method="FROM_BALANCE_EQUATION">
					<fuselage_effects include="TRUE"/>
					<calibration>
						<scale_factor_alpha value="1.0"/>
						<scale_factor_cL value="1.0"/>
					</calibration>
				</total_lift_curve>
				<total_drag_polar perform="TRUE" method="FROM_BALANCE_EQUATION">
					<delta_CD0_miscellaneous calculate="TRUE" value="0.00358"/>
					<delta_CD0_landing_gears calculate="FALSE" value="0.0"/>
					<calibration>
						<scale_factor_cL value="1.0"/>
						<scale_factor_cD value="1.0"/>
					</calibration>
				</total_drag_polar>
				<total_moment_curve perform="TRUE" method="FROM_BALANCE_EQUATION">
					<calibration>
						<scale_factor_alpha value="1.0"/>
						<scale_factor_cM value="1.0"/>
					</calibration>
				</total_moment_curve>
				<longitudinal_static_stability perform="TRUE" wing_pendular_stability_effect="TRUE" method="FROM_BALANCE_EQUATION"/>
				<lateral_static_stability perform="TRUE" method="NAPOLITANO_DATCOM"/> 
				<directional_static_stability perform="TRUE" method="VEDSC_USAFDATCOM_WING"/>
				<VMU perform="TRUE" method="VEDSC_USAFDATCOM_WING"/> <!-- This analysis is performed only in TAKE-OFF conditions -->
				<!---->
				<dynamic_stability perform="FALSE" method=""/> <!-- TODO: IMPLEMENT THIS (work in progress) -->
				<buffet_barrier perform="FALSE" method="KROO"/> <!-- TODO: IMPLEMENT THIS (work in progress) -->
				<!---->
			</aircraft>
        </aerodynamics_and_stability>
    </analysis>
	<!-- choose which plot has to be done --> 
	<plot>
		<wing perform="TRUE"/>
		<horizontal_tail perform="TRUE"/>
		<vertical_tail perform="TRUE"/>
		<canard perform="TRUE"/>
		<fuselage perform="TRUE"/>
		<nacelles perform="TRUE"/>
		<aircraft perform="TRUE"/>
	</plot>
</jpad_config>